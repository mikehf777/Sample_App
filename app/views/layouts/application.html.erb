<!DOCTYPE html>
<html>
<head>
<title><%= titulo %></title>
<%= csrf_meta_tag %>
<%= render 'layouts/stylesheets' %>
</head>
<body>
<div class="container">
	<%= render 'layouts/header'%>
<section>
	<% flash.each do |key, value| %>
	<h1><div class="flash <%= key %>"><%= value %></div></h1>
	<% end %>

	<%= yield %>
</section>
<footer>
	<%= render 'layouts/footer'%>
	<%= debug(params) if Rails.env.development? %>
</footer>
</div>
</body>
</html>

